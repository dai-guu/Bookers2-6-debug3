<!-- コメントテーブル-->
<table>
<% book_comments.each do |comment| %>

  <tr>
  	<td>
  		<%= link_to user_path(comment.user) do %>
    		<%= attachment_image_tag comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
    		<%= comment.user.name %>
  		<% end %>
  	</td>
  	<td><%= comment.comment %></td>
  	<% if current_user == comment.user %>
    	<td><%= link_to 'Destroy', book_book_comment_path(comment.book, comment), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  	<% end %>
  </tr>
<% end %>
</table>



